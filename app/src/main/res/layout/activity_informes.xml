<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".activity_informes">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Informes"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Indice de masa corporal (IMC)"
            android:textColor="#fff"
            android:textSize="15sp"></TextView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peso (Kg)"
                    android:textColor="#fff"
                    android:padding="20dp"
                    ></TextView>

            <TextView
                android:id="@+id/valuePeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="50"
                android:textColor="#fff"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Altura m"
                android:textColor="#fff"
                android:padding="20dp"
                ></TextView>

            <TextView
                android:id="@+id/valueAltura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="1.78"
                android:textColor="#fff"></TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar"
                android:id="@+id/abrirPopup">
            </Button>

            <TextView
                android:id="@+id/resultadoImc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:padding="20dp"
                android:text="IMC" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/inicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="statusInicio"
            android:background="#000"
            android:src="@drawable/inicio"
            android:layout_margin="10dp"
            android:text="Home"
            tools:ignore="Suspicious0dp"></ImageButton>

        <ImageButton
            android:id="@+id/informesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:src="@drawable/infromes"
            android:layout_margin="10dp"
            android:text="Informe"
            tools:ignore="Suspicious0dp"></ImageButton>

        <ImageButton
            android:id="@+id/estadisticasButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:src="@drawable/estadisticas"
            android:layout_margin="10dp"
            android:onClick="statusEstadisticas"
            android:text="Estadisticas"
            tools:ignore="Suspicious0dp"></ImageButton>

        <ImageButton
            android:id="@+id/ajustesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:src="@drawable/ajustes"
            android:layout_margin="10dp"
            android:onClick="statusAjustes"
            android:text="Ajustes"
            tools:ignore="Suspicious0dp"></ImageButton>
    </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>