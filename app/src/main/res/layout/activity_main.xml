<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MainActivity">

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="ENTRENAMIENTO FISICO"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/fraseRandom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/borderedondo"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:textColor="#000"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="CATEGORIAS"
                android:textSize="18dp"
                android:textColor="#fff"
                android:background="@drawable/lineabordedow"></TextView>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/categorias">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ABDOMINALES"
                        android:textSize="17dp"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff">
                    </TextView>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c1r1"
                        android:text="ABDOMINALES PRINCIPIANTE"
                        android:background="@drawable/abdomen1"
                        android:scaleType="centerInside"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c1r2"
                        android:text="ABDOMINALES INTERMEDIO"
                        android:background="@drawable/abdomen2"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c1r3"
                        android:text="ABDOMINALES AVANZADO"
                        android:background="@drawable/abdomen3"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"
                     />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ESPALDA Y HOMBROS"
                        android:textSize="17dp"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff">
                    </TextView>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c2r1"
                        android:text="ESPALDA Y HOMBROS PRINCIPIANTE"
                        android:background="@drawable/espalda1"
                        android:textAlignment="center"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c2r2"
                        android:textAlignment="center"
                        android:text="ESPALDA Y HOMBROS INTERMEDIO"
                        android:background="@drawable/espalda2"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c2r3"
                        android:textAlignment="center"
                        android:text="ESPALDA Y HOMBROS AVANZADO"
                        android:background="@drawable/espalda3"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PECHO"
                        android:textSize="17dp"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff">
                    </TextView>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c3r1"
                        android:text="PECHO PRINCIPIANTE"
                        android:background="@drawable/pecho1"
                        android:textAlignment="center"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c3r2"
                        android:text="PECHO INTERMEDIO"
                        android:textAlignment="center"
                        android:background="@drawable/pecho2"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:textAlignment="center"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c3r3"
                        android:text="PECHO AVANZADO"
                        android:background="@drawable/pecho3"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BRAZO"
                        android:textSize="17dp"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff">
                    </TextView>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c4r1"
                        android:textAlignment="center"
                        android:text="BRAZO PRINCIPIANTE"
                        android:background="@drawable/brazo1"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c4r2"
                        android:textAlignment="center"
                        android:text="BRAZO INTERMEDIO"
                        android:background="@drawable/brazo2"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c4r3"
                        android:textAlignment="center"
                        android:text="BRAZO AVANZADO"
                        android:background="@drawable/brazo3"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PIERNA"
                        android:textSize="17dp"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff">
                    </TextView>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c5r1"
                        android:textAlignment="center"
                        android:text="PIERNA PRINCIPIANTE"
                        android:background="@drawable/pierna1"
                        android:scaleType="centerInside"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c5r2"
                        android:textAlignment="center"
                        android:text="PIERNA INTERMEDIO"
                        android:background="@drawable/pierna2"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:button="@android:color/transparent"
                        android:layout_margin="10dp"
                        android:id="@+id/c5r3"
                        android:textAlignment="center"
                        android:text="PIERNA AVANZADO"
                        android:background="@drawable/pierna3"
                        android:textColor="#FFF"
                        android:textSize="17dp"
                        android:autoSizeMaxTextSize="17dp"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"/>
                    />
                </RadioGroup>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/inicio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_home_24"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@drawable/lineaborde"
                    tools:ignore="Suspicious0dp"></ImageButton>

            <ImageButton
                android:id="@+id/informesButton"
                android:onClick="statusInformes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_assessment_24"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/lineaborde"
                android:text="Informe"
                tools:ignore="Suspicious0dp"></ImageButton>

            <ImageButton
                android:id="@+id/estadisticasButton"
                android:onClick="statusEstadisticas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_assignment_24"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/lineaborde"
                tools:ignore="Suspicious0dp"></ImageButton>

            <ImageButton
                android:id="@+id/ajustesButton"
                android:onClick="statusAjustes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_settings_24"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/lineaborde"
                tools:ignore="Suspicious0dp"></ImageButton>
        </LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>