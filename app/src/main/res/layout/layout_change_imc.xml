<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000"
    android:padding="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editAlturaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce la altura"
            android:textColor="#fff"
            android:textColorHint="#fff"></EditText>

        <EditText
            android:id="@+id/editPesoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce el peso"
            android:textColor="#fff"
            android:textColorHint="#fff"></EditText>

        <Button
            android:id="@+id/cambiarIMC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cambiarIMC"
            android:text="Cambiar"></Button>
    </LinearLayout>

</RelativeLayout>