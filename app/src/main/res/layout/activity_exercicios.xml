<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activityExercicios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Error"
                android:textAlignment="textStart"
                android:id="@+id/tituloEjercicio"
                android:padding="20dp"
                android:background="@color/main"
                android:textSize="20dp"></TextView>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estas listo?"
                    android:layout_margin="20dp"
                    android:textSize="18dp"
                    android:id="@+id/nombreEjercicio">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Da click en siguiente para empezar"
                    android:textSize="15dp"
                    android:layout_margin="20dp"
                    android:id="@+id/descripcionEjercicio">
                </TextView>

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/image_ex"
                    android:layout_margin="25dp"
                    android:layout_width="250dp"
                    android:layout_height="250dp">

                </ImageView>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="siguiente"
                android:id="@+id/siguiente"
                android:background="@drawable/layoutbutton"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:foreground="?android:attr/selectableItemBackground"
                ></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/layoutbutton"
                android:text="Atras"
                android:layout_margin="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/atras">
            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salir"
                android:layout_margin="10dp"
                android:id="@+id/salirToMain"
                android:background="@drawable/layoutbutton"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_gravity="center_horizontal">
            </Button>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>