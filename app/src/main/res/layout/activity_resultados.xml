<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".resultados">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Felicidades"
                android:textAlignment="center"
                android:id="@+id/tituloEjercicio"
                android:textColor="@color/textcolorcontrasteimage"
                android:padding="20dp"
                android:textSize="@dimen/TitlesDimen"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bordes_redondo_item"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_ex"
                android:src="@drawable/img_descanso_inicio"
                android:layout_margin="25dp"
                android:layout_width="300dp"
                android:layout_height="300dp">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¡Que bien lo has hecho!"
                android:padding="20dp"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/Subtitle">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nameEjercicio"
                android:text="Pierna Principiante"
                android:padding="20dp"
                android:textAlignment="center"
                android:textSize="@dimen/Subtitle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/cantidadEjercicios"
                        android:text="10"
                        android:textSize="@dimen/TextOneDime"
                        android:textAlignment="center"
                        android:padding="10dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Ejercicios"
                        android:textAlignment="center"
                        android:textSize="@dimen/TextOneDime"
                        android:padding="10dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/calorias"
                        android:text="150 kcal"
                        android:textSize="@dimen/TextOneDime"
                        android:textAlignment="center"
                        android:padding="10dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Ejercicios"
                        android:textSize="@dimen/TextOneDime"
                        android:textAlignment="center"
                        android:padding="10dp">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="start"
                android:background="@drawable/borderedondo"
                android:elevation="@dimen/elevacion_dimen"
                android:layout_margin="20dp"
                android:id="@+id/regresar"
                android:text="Hola">
            </Button>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>